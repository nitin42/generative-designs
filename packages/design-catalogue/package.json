{
  "name": "design-catalogue",
  "version": "1.0.0",
  "description": "Catalogue of generative art",
  "main": "src/index.js",
  "author": "Nitin Tulswani",
  "license": "MIT",
  "dependencies": {
    "emotion": "^9.2.6",
    "react-color": "^2.14.1",
    "react-emotion": "^9.2.6",
    "react-responsive-modal": "^3.2.0",
    "react-router-dom": "^4.3.1",
    "simple-cache-provider": "^0.7.0",
    "svg-to-image": "^1.1.3",
    "two.js": "^0.7.0-alpha.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.2",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2"
  },
  "scripts": {
    "start": "parcel ./public/index.html",
    "build:catalogue": "NODE_ENV=production parcel build ./src/index.js",
    "deploy": "yarn build && surge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "./node_modules/.bin/prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "alias": {
    "react": "./vendor/react.production.min.js",
    "react-dom": "./vendor/react-dom.production.min.js"
  }
}
